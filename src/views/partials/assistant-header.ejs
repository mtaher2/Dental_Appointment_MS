<!-- Assistant Header -->
<div class="assistant-header">
  <div class="assistant-header-left">
    <span class="assistant-header-title">Clinic Assistant</span>
    <i class="fas fa-chevron-down assistant-header-arrow"></i>
  </div>
  <div class="assistant-header-nav">
    <a href="/assistant" class="assistant-nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
    <a href="/assistant/vital-signs" class="assistant-nav-link <%= currentPage === 'vital-signs' ? 'active' : '' %>">Vital Signs</a>

<!-- Mobile overlay -->
<div class="<%= cssPrefix %>-mobile-overlay mobile-overlay" id="<%= cssPrefix %>-mobile-overlay" data-prefix="<%= cssPrefix %>"></div>

<script>
// Mobile menu functionality
document.addEventListener('DOMContentLoaded', function() {
  console.log('Mobile menu script loaded'); // Debug log
  
  // Function to toggle mobile menu
  function toggleMobileMenu(prefix) {
    try {
      const nav = document.getElementById(prefix + '-nav');
      const overlay = document.getElementById(prefix + '-mobile-overlay');
      const body = document.body;
      
      console.log('Toggle mobile menu', { prefix, nav, overlay }); // Debug log
      
      if (nav && overlay) {
        const isOpen = nav.classList.contains('mobile-open');
        
        if (isOpen) {
          nav.classList.remove('mobile-open');
          overlay.classList.remove('active');
          body.classList.remove('mobile-menu-open');
        } else {
          nav.classList.add('mobile-open');
          overlay.classList.add('active');
          body.classList.add('mobile-menu-open');
        }
        
        console.log('Mobile menu toggled', { isOpen: !isOpen }); // Debug log
      } else {
        console.error('Mobile menu elements not found', { nav, overlay, prefix });
      }
    } catch (error) {
      console.error('Error toggling mobile menu:', error);
    }
  }
  
  // Function to close mobile menu
  function closeMobileMenu(prefix) {
    const nav = document.getElementById(prefix + '-nav');
    const overlay = document.getElementById(prefix + '-mobile-overlay');
    const body = document.body;
    
    if (nav && overlay) {
      nav.classList.remove('mobile-open');
      overlay.classList.remove('active');
      body.classList.remove('mobile-menu-open');
    }
  }
  
  // Add event listeners to mobile menu buttons
  const menuButtons = document.querySelectorAll('.mobile-menu-toggle');
  menuButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      const prefix = this.getAttribute('data-prefix');
      console.log('Menu button clicked', { prefix }); // Debug log
      toggleMobileMenu(prefix);
    });
  });
  
  // Add event listeners to mobile overlays
  const overlays = document.querySelectorAll('.mobile-overlay');
  overlays.forEach(overlay => {
    overlay.addEventListener('click', function() {
      const prefix = this.getAttribute('data-prefix');
      console.log('Overlay clicked', { prefix }); // Debug log
      closeMobileMenu(prefix);
    });
  });
  
  // Close mobile menu when clicking navigation links
  const navLinks = document.querySelectorAll('[class*="-nav-link"]');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      // Extract prefix from the class name
      const classes = this.className.split(' ');
      const navLinkClass = classes.find(cls => cls.endsWith('-nav-link'));
      if (navLinkClass) {
        const prefix = navLinkClass.replace('-nav-link', '');
        closeMobileMenu(prefix);
      }
    });
  });
  
  // Close mobile menu when pressing Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      // Close all open mobile menus
      const openNavs = document.querySelectorAll('[class*="-nav"].mobile-open');
      openNavs.forEach(nav => {
        const id = nav.id;
        const prefix = id.replace('-nav', '');
        closeMobileMenu(prefix);
      });
    }
  });
  
  console.log('Mobile menu event listeners attached'); // Debug log
});
</script> 
<div class="apply-discount-container">
  <h2 class="apply-discount-title">Apply Discount</h2>
  
  <form class="apply-discount-form">
    <div class="apply-discount-field">
      <label for="invoiceNumber">Invoice Number</label>
      <input type="text" id="invoiceNumber" name="invoiceNumber" class="apply-discount-input" placeholder="Enter invoice number">
    </div>
    
    <div class="apply-discount-field">
      <label for="discountAmount">Discount Amount</label>
      <input type="text" id="discountAmount" name="discountAmount" class="apply-discount-input" placeholder="Enter discount amount">
    </div>
    
    <div class="apply-discount-field">
      <label for="discountPercentage">Discount Percentage</label>
      <input type="text" id="discountPercentage" name="discountPercentage" class="apply-discount-input" placeholder="Enter discount percentage">
      <div class="discount-note">Maximum discount allowed: 15%</div>
    </div>
    
    <div class="apply-discount-field">
      <label for="discountReason">Reason for Discount</label>
      <textarea id="discountReason" name="discountReason" class="apply-discount-textarea" placeholder="Enter reason for discount"></textarea>
    </div>
    
    <div class="apply-discount-actions">
      <button type="submit" class="apply-discount-btn">Apply Discount</button>
    </div>
  </form>
</div> 
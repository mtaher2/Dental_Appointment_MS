<div class="record-payment-container fade-slide-in">
  <h1 class="record-payment-title">Record Payment</h1>
  <form class="record-payment-form">
    <div class="record-payment-field">
      <label for="paymentMethod">Payment Method</label>
      <select id="paymentMethod" name="paymentMethod" class="record-payment-input">
        <option value="">Select Method</option>
        <option value="cash">Cash</option>
        <option value="credit">Credit Card</option>
        <option value="insurance">Insurance</option>
        <option value="bank">Bank Transfer</option>
      </select>
    </div>
    <div class="record-payment-field">
      <label for="amountPaid">Amount Paid</label>
      <input type="number" id="amountPaid" name="amountPaid" class="record-payment-input" placeholder="Enter Amount" />
    </div>
    <div class="record-payment-field">
      <label for="referenceNumber">Reference Number</label>
      <input type="text" id="referenceNumber" name="referenceNumber" class="record-payment-input" placeholder="Enter Reference Number" />
    </div>
    <div class="record-payment-field">
      <label for="dateOfPayment">Date of Payment</label>
      <input type="date" id="dateOfPayment" name="dateOfPayment" class="record-payment-input" placeholder="Select Date" />
    </div>
    <div class="record-payment-field">
      <label for="notes">Notes</label>
      <textarea id="notes" name="notes" class="record-payment-input record-payment-notes" placeholder=""></textarea>
    </div>
    <div class="record-payment-checkbox-row">
      <input type="checkbox" id="manualEntry" name="manualEntry" class="record-payment-checkbox" />
      <label for="manualEntry" class="record-payment-checkbox-label">Manual Payment Entry</label>
    </div>
    <div class="record-payment-actions-row">
      <button type="submit" class="record-payment-btn">Record Payment</button>
    </div>
  </form>
</div> 
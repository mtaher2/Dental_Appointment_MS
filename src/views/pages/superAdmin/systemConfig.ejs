<div class="system-config-container fade-slide-in">
  <h1 class="system-config-title">System Configuration</h1>
  <p class="system-config-description clinic-muted">Manage global system settings for all clinics.</p>

  <form class="system-config-form">
    <div class="config-section">
      <h2 class="config-section-title">Branding</h2>
      <div class="config-field">
        <label for="clinicName">Clinic Name</label>
        <input type="text" id="clinicName" name="clinicName" />
      </div>
      <div class="config-field">
        <label for="logoUrl">Logo URL</label>
        <input type="text" id="logoUrl" name="logoUrl" />
      </div>
      <div class="config-field">
        <label for="colorScheme">Color Scheme</label>
        <input type="text" id="colorScheme" name="colorScheme" />
      </div>
    </div>

    <div class="config-section">
      <h2 class="config-section-title">Language Settings</h2>
      <div class="config-field language-buttons">
        <button type="button" class="lang-btn admins-blue-btn">Arabic</button>
        <button type="button" class="lang-btn admins-blue-btn">English</button>
      </div>
    </div>

    <div class="config-section">
      <h2 class="config-section-title">API Settings</h2>
      <div class="config-field">
        <label for="smsApiKey">SMS API Key</label>
        <input type="text" id="smsApiKey" name="smsApiKey" />
      </div>
      <div class="config-field">
        <label for="emailApiKey">Email API Key</label>
        <input type="text" id="emailApiKey" name="emailApiKey" />
      </div>
    </div>

    <div class="config-section">
      <h2 class="config-section-title">File Upload Limits</h2>
      <div class="config-field">
        <label for="maxFileSize">Maximum File Size (MB)</label>
        <input type="number" id="maxFileSize" name="maxFileSize" />
      </div>
    </div>

    <div class="config-section">
      <h2 class="config-section-title">Regional Settings</h2>
      <div class="config-field">
        <label for="timezone">Timezone</label>
        <input type="text" id="timezone" name="timezone" />
      </div>
      <div class="config-field">
        <label for="currency">Currency</label>
        <input type="text" id="currency" name="currency" />
      </div>
    </div>

    <div class="config-actions">
      <button type="submit" class="save-config-btn admins-blue-btn">Save Configuration</button>
    </div>
  </form>
</div> 
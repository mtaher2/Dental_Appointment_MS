<div class="notification-settings-container">
    <h1 class="notification-settings-title">Notification Settings</h1>
    <p class="notification-settings-description">Manage system notifications and communication preferences.</p>

    <div class="notification-settings-section">
        <h2 class="notification-settings-section-title">Email Notifications</h2>
        <div class="notification-settings-form">
            <div class="form-group">
                <label class="notification-label">
                    <input type="checkbox" class="notification-checkbox" checked>
                    <span class="notification-text">Send appointment confirmations</span>
                </label>
            </div>
            <div class="form-group">
                <label class="notification-label">
                    <input type="checkbox" class="notification-checkbox" checked>
                    <span class="notification-text">Send appointment reminders</span>
                </label>
            </div>
            <div class="form-group">
                <label class="notification-label">
                    <input type="checkbox" class="notification-checkbox">
                    <span class="notification-text">Send payment notifications</span>
                </label>
            </div>
        </div>
    </div>

    <div class="notification-settings-section">
        <h2 class="notification-settings-section-title">SMS Notifications</h2>
        <div class="notification-settings-form">
            <div class="form-group">
                <label class="notification-label">
                    <input type="checkbox" class="notification-checkbox" checked>
                    <span class="notification-text">Send SMS reminders</span>
                </label>
            </div>
            <div class="form-group">
                <label class="notification-label">
                    <input type="checkbox" class="notification-checkbox">
                    <span class="notification-text">Send emergency alerts</span>
                </label>
            </div>
        </div>
    </div>

    <div class="notification-settings-actions">
        <button class="save-btn">Save Settings</button>
        <button class="reset-btn">Reset to Default</button>
    </div>
</div> 
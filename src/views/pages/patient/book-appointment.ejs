                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button class="book-modal-btn">Book</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Appointment type selection
        document.querySelectorAll('.appointment-type-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.appointment-type-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Modal functionality
        const modal = document.getElementById('manual-selection-modal');
        const manualBtn = document.getElementById('manual-selection-btn');
        const closeBtn = document.getElementById('close-modal');

        // Open modal when clicking Manual doctor selection
        manualBtn.addEventListener('click', function(e) {
            e.preventDefault();
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        });

        // Close modal
        closeBtn.addEventListener('click', function() {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });

        // Close modal when clicking outside
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Doctor selection
        document.querySelectorAll('.doctor-selection-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                if (this.id !== 'manual-selection-btn') {
                    document.querySelectorAll('.doctor-selection-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                }
            });
        });

        // Calendar functionality
        function previousMonth() {
            console.log('Previous month');
        }

        function nextMonth() {
            console.log('Next month');
        }

        // Date selection in modal
        document.querySelectorAll('.date').forEach(date => {
            date.addEventListener('click', function() {
                if (!this.classList.contains('other-month')) {
                    document.querySelectorAll('.date').forEach(d => d.classList.remove('selected'));
                    this.classList.add('selected');
                }
            });
        });

        // Time slot selection
        document.querySelectorAll('input[name="timeSlot"]').forEach(radio => {
            radio.addEventListener('change', function() {
                console.log('Selected time:', this.value);
            });
        });

        // Book button in modal
        document.querySelector('.book-modal-btn').addEventListener('click', function() {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
            alert('Appointment booked successfully!');
        });

        // Form submission
        document.querySelector('.book-appointment-btn').addEventListener('click', function() {
            alert('Appointment booking functionality would be implemented here!');
        });
    </script>
</body>
</html> 
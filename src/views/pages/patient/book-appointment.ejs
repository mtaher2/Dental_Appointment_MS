                </div>

                <!-- Available Time Slots -->
                <div class="time-slots-section">
                    <h3 class="time-slots-title">Available time slots</h3>
                    <div class="time-slots-list">
                        <label class="time-slot-item">
                            <input type="radio" name="timeSlot" value="10:00" checked>
                            <span class="radio-custom"></span>
                            <span class="time-slot-text">10:00 AM - Dr. Emily Carter</span>
                        </label>
                        <label class="time-slot-item">
                            <input type="radio" name="timeSlot" value="11:00">
                            <span class="radio-custom"></span>

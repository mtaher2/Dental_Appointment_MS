<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book an Appointment - Dental Clinic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="dental-header">
        <div class="header-container">
            <div class="header-left">
                <h1 class="clinic-logo">DENTAL CLINIC</h1>
            </div>
            <div class="header-right">
                <nav class="main-nav">
                    <a href="/patient/select-doctor" class="nav-item">Select Doctor</a>
                    <a href="/patient/book-appointment" class="nav-item">Book Appointment</a>
                    <a href="/patient/appointment-confirmed" class="nav-item">Appointment Status</a>
                    <a href="/patient/rate-dentist" class="nav-item">Rate Dentist</a>
                    <a href="/patient/share-experience" class="nav-item">Share Experience</a>
                </nav>
                <div class="header-icons">
                    <div class="notification-bell">
                        <i class="fas fa-bell"></i>
                    </div>
                    <a href="/patient/profile" class="user-profile">
                        <img src="/images/doctor/profile .svg" alt="User Profile">
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Page Title -->
            <h2 class="page-heading">Book an appointment</h2>

            <!-- Appointment Type Section -->
            <div class="appointment-section">
                <h3 class="section-heading">Appointment type</h3>
                <div class="appointment-types">
                    <button class="appointment-type-btn active">Cleaning</button>
                    <button class="appointment-type-btn">Consultation</button>
                    <button class="appointment-type-btn">Braces</button>
                    <button class="appointment-type-btn">Surgery</button>
                    <button class="appointment-type-btn">Follow-up</button>
                </div>
            </div>

            <!-- Select Doctor Section -->
            <div class="doctor-selection-section">
                <h3 class="section-heading">Select a doctor</h3>
                <div class="doctor-selection-options">
                    <button class="doctor-selection-btn active" id="manual-selection-btn">Manual doctor selection</button>
                    <button class="doctor-selection-btn">Auto-assign</button>
                </div>
            </div>

            <!-- Booking Rules Section -->
            <div class="booking-rules-section">
                <h3 class="section-heading">Booking rules</h3>
                <p class="booking-rules-text">Bookings must be made at least 2 hours in advance. Cancellations are allowed up to 5 hours before the appointment.</p>
            </div>

            <!-- Reason for Visit Section -->
            <div class="form-section">
                <h3 class="section-heading">Reason for visit (optional)</h3>
                <div class="input-container">
                    <input type="text" class="form-input" placeholder="Add a reason">
                </div>
            </div>

            <!-- Describe Symptoms Section -->
            <div class="form-section">
                <h3 class="section-heading">Describe symptoms (optional)</h3>
                <div class="textarea-container">
                    <textarea class="form-textarea" rows="5" placeholder="Describe your symptoms..."></textarea>
                </div>
            </div>

            <!-- Book Appointment Button -->
            <div class="form-actions">
                <button type="submit" class="book-appointment-btn">Book appointment</button>
            </div>
        </div>
    </main>

    <!-- Manual Selection Modal -->
    <div id="manual-selection-modal" class="modal-overlay">
        <div class="modal-container">
            <!-- Modal Header -->
            <div class="modal-header">
                <h2 class="modal-title">DENTAL CLINIC</h2>
                <button class="close-modal-btn" id="close-modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Modal Content -->
            <div class="modal-content">
                <div class="selection-info">
                    <p class="selection-type">Manual Selection</p>
                    <h3 class="doctor-info">Dr. Emily Carter</h3>
                    <p class="doctor-details">Dentist, 5 years of experience</p>
                </div>

                <!-- Calendar Section -->

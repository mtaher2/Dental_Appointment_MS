<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Share Your Experience - Dental Clinic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="dental-header">
        <div class="header-container">
            <div class="header-left">
                <h1 class="clinic-logo">DENTAL CLINIC</h1>
            </div>
            <div class="header-right">
                <nav class="main-nav">
                    <a href="/patient/select-doctor" class="nav-item">Select Doctor</a>
                    <a href="/patient/book-appointment" class="nav-item">Book Appointment</a>
                    <a href="/patient/appointment-confirmed" class="nav-item">Appointment Status</a>
                    <a href="/patient/rate-dentist" class="nav-item">Rate Dentist</a>
                    <a href="/patient/share-experience" class="nav-item">Share Experience</a>
                </nav>
                <div class="header-icons">
                    <div class="notification-bell">
                        <i class="fas fa-bell"></i>
                    </div>
                    <a href="/patient/profile" class="user-profile">
                        <img src="/images/doctor/profile .svg" alt="User Profile">
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="patient-main">
        <div class="main-container">
            <!-- Page Title -->
            <h1 class="page-title">Share Your Experience</h1>
            <p class="page-subtitle">Your feedback helps us improve our services. Please rate your overall satisfaction with your recent visit.</p>

            <!-- Overall Rating Section -->
            <div class="rating-overview-section">
                <div class="overall-rating">
                    <div class="rating-number">0</div>
                    <div class="rating-stars">
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>
                    <div class="rating-count">0 reviews</div>
                </div>
                <div class="rating-distribution">
                    <div class="distribution-item">
                        <span class="star-label">5</span>
                        <div class="distribution-bar">
                            <div class="bar-fill" style="width: 0%"></div>
                        </div>
                        <span class="distribution-percent">0%</span>
                    </div>
                    <div class="distribution-item">
                        <span class="star-label">4</span>
                        <div class="distribution-bar">
                            <div class="bar-fill" style="width: 0%"></div>
                        </div>
                        <span class="distribution-percent">0%</span>
                    </div>
                    <div class="distribution-item">
                        <span class="star-label">3</span>
                        <div class="distribution-bar">
                            <div class="bar-fill" style="width: 0%"></div>
                        </div>
                        <span class="distribution-percent">0%</span>
                    </div>
                    <div class="distribution-item">
                        <span class="star-label">2</span>
                        <div class="distribution-bar">
                            <div class="bar-fill" style="width: 0%"></div>
                        </div>
                        <span class="distribution-percent">0%</span>
                    </div>
                    <div class="distribution-item">
                        <span class="star-label">1</span>
                        <div class="distribution-bar">
                            <div class="bar-fill" style="width: 0%"></div>
                        </div>
                        <span class="distribution-percent">0%</span>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="comments-section">
                <textarea class="comments-textarea" placeholder="Optional : Share any additional comments or suggestions." rows="6"></textarea>
            </div>

            <!-- Additional Questions Section -->
            <div class="additional-questions-section">
                <h2 class="section-title">Additional Questions</h2>
                
                <!-- Question 1: Cleanliness -->
                <div class="question-item">
                    <label class="question-label">How would you rate the cleanliness of the clinic?</label>
                    <div class="question-input">
                        <select class="question-select">
                            <option value="">Select rating</option>
                            <option value="excellent">Excellent</option>
                            <option value="good">Good</option>
                            <option value="average">Average</option>
                            <option value="poor">Poor</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="question-options">
                        <button type="button" class="option-btn" data-value="excellent">Excellent</button>
                        <button type="button" class="option-btn" data-value="good">Good</button>
                        <button type="button" class="option-btn" data-value="average">Average</button>
                        <button type="button" class="option-btn" data-value="poor">Poor</button>
                    </div>
                </div>

                <!-- Question 2: Wait Time -->
                <div class="question-item">
                    <label class="question-label">How satisfied were you with the wait time?</label>
                    <div class="question-input">
                        <select class="question-select">
                            <option value="">Select satisfaction level</option>
                            <option value="very-satisfied">Very Satisfied</option>
                            <option value="satisfied">Satisfied</option>
                            <option value="neutral">Neutral</option>
                            <option value="dissatisfied">Dissatisfied</option>
                            <option value="very-dissatisfied">Very Dissatisfied</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="question-options">
                        <button type="button" class="option-btn" data-value="very-satisfied">Very Satisfied</button>
                        <button type="button" class="option-btn" data-value="satisfied">Satisfied</button>
                        <button type="button" class="option-btn" data-value="neutral">Neutral</button>
                        <button type="button" class="option-btn" data-value="dissatisfied">Dissatisfied</button>
                        <button type="button" class="option-btn" data-value="very-dissatisfied">Very Dissatisfied</button>
                    </div>
                </div>

                <!-- Question 3: Staff -->
                <div class="question-item">
                    <label class="question-label">How would you rate the staff's friendliness and helpfulness?</label>
                    <div class="question-input">
                        <select class="question-select">
                            <option value="">Select rating</option>
                            <option value="excellent">Excellent</option>
                            <option value="good">Good</option>
                            <option value="average">Average</option>
                            <option value="poor">Poor</option>
                        </select>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="question-options">
                        <button type="button" class="option-btn" data-value="excellent">Excellent</button>
                        <button type="button" class="option-btn" data-value="good">Good</button>
                        <button type="button" class="option-btn" data-value="average">Average</button>
                        <button type="button" class="option-btn" data-value="poor">Poor</button>
                    </div>
                </div>
            </div>

            <!-- Disclaimer and Submit -->
            <div class="feedback-footer">
                <p class="disclaimer-text">Please note: Your feedback is for internal review only and cannot be edited or deleted after submission.</p>
                <div class="form-actions">
                    <button type="submit" class="submit-feedback-btn">Submit Feedback</button>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Star rating functionality
        document.querySelectorAll('.rating-stars i').forEach((star, index) => {
            star.addEventListener('click', function() {
                // Remove all filled stars
                document.querySelectorAll('.rating-stars i').forEach(s => {
                    s.classList.remove('fas');
                    s.classList.add('far');
                });
                
                // Fill stars up to clicked star
                for (let i = 0; i <= index; i++) {
                    document.querySelectorAll('.rating-stars i')[i].classList.remove('far');
                    document.querySelectorAll('.rating-stars i')[i].classList.add('fas');
                }
                
                // Update rating number
                document.querySelector('.rating-number').textContent = index + 1;
            });
        });

        // Question option buttons
        document.querySelectorAll('.option-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from siblings
                const siblings = this.parentElement.querySelectorAll('.option-btn');
                siblings.forEach(sibling => sibling.classList.remove('active'));
                
                // Add active class to clicked button
                this.classList.add('active');
                
                // Update corresponding select dropdown
                const questionItem = this.closest('.question-item');
                const select = questionItem.querySelector('.question-select');
                select.value = this.dataset.value;
            });
        });

        // Select dropdown change
        document.querySelectorAll('.question-select').forEach(select => {
            select.addEventListener('change', function() {
                const questionItem = this.closest('.question-item');
                const buttons = questionItem.querySelectorAll('.option-btn');
                
                // Remove active class from all buttons
                buttons.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to corresponding button
                if (this.value) {
                    const activeBtn = questionItem.querySelector(`[data-value="${this.value}"]`);
                    if (activeBtn) {
                        activeBtn.classList.add('active');
                    }
                }
            });
        });
    </script>
</body>
</html> 
<!-- Include Patient Payment Options specific CSS -->
<link rel="stylesheet" href="/css/patient/paymentOptions.css">

<div class="payment-container po-animate-container">
  <div class="payment-form-section po-animate-form">
    <h2 class="po-title">Payment options</h2>
    <form class="payment-form" id="paymentForm" autocomplete="off">
      <div class="form-group">
        <label for="cardNumber">Card number</label>
        <input type="text" id="cardNumber" name="cardNumber" placeholder="Card number" autocomplete="off">
      </div>
      <div class="payment-row">
        <div class="form-group">
          <label for="expiry">Expiry date</label>
          <input type="text" id="expiry" name="expiry" placeholder="MM/YY" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="cvv">CVV</label>
          <input type="text" id="cvv" name="cvv" placeholder="CVV" autocomplete="off">
        </div>
      </div>
      <div class="form-group">
        <label for="nameOnCard">Name on card</label>
        <input type="text" id="nameOnCard" name="nameOnCard" placeholder="Name on card" autocomplete="off">
      </div>
      <div class="paypal-section">
        <label style="margin-bottom: 8px;">PayPal</label>
        <div class="paypal-option">
          <input type="checkbox" id="paypal" name="paypal">
          <label for="paypal">Pay with PayPal</label>
        </div>
      </div>
      <button type="submit" class="pay-now-btn">Pay Now</button>
      <div id="paymentMessage" class="payment-message"></div>
    </form>
  </div>
  <aside class="payment-summary po-animate-summary">
    <h3>Payment summary</h3>
    <div class="summary-row"><span>Clinic charges</span><span>$120</span></div>
    <div class="summary-row"><span>Taxes</span><span>$10</span></div>
    <div class="summary-row"><span>Other fees</span><span>$5</span></div>
    <div class="summary-row total"><span>Total</span><span>$135</span></div>
  </aside>
</div>
<script src="/js/paymentOptions.js"></script> 
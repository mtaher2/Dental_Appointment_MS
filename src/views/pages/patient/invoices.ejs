                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>08/15/2023</td>
                        <td>Annual Checkup</td>
                        <td>Dr. Emily Carter</td>
                        <td>$250.00</td>
                        <td><span class="invoice-status paid">Paid</span></td>
                        <td><button class="pay-now-btn">Pay Now</button></td>
                    </tr>
                    <tr>
                        <td>09/22/2023</td>
                        <td>Physical Therapy</td>
                        <td>Sarah Johnson</td>
                        <td>$100.00</td>
                        <td><span class="invoice-status paid">Paid</span></td>
                        <td><button class="pay-now-btn">Pay Now</button></td>
                    </tr>
                    <tr>
                        <td>10/10/2023</td>
                        <td>Dental Cleaning</td>
                        <td>Dr. Michael Lee</td>
                        <td>$120.00</td>
                        <td><span class="invoice-status paid">Paid</span></td>
                        <td><button class="pay-now-btn">Pay Now</button></td>
                    </tr>
                    <tr>
                        <td>11/05/2023</td>
                        <td>Dermatology Consultation</td>
                        <td>Dr. Olivia Brown</td>
                        <td>$150.00</td>
                        <td><span class="invoice-status unpaid">Unpaid</span></td>
                        <td><button class="pay-now-btn">Pay Now</button></td>
                    </tr>
                    <tr>
                        <td>12/18/2023</td>
                        <td>Vision Exam</td>
                        <td>Dr. David Wilson</td>
                        <td>$80.00</td>
                        <td><span class="invoice-status overdue">Overdue</span></td>
                        <td><button class="pay-now-btn">Pay Now</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select a Doctor - Dental Clinic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="dental-header">
        <div class="header-container">
            <div class="header-left">
                <h1 class="clinic-logo">DENTAL CLINIC</h1>
            </div>
            <div class="header-right">
                <nav class="main-nav">
                    <a href="/patient/select-doctor" class="nav-item">Select Doctor</a>
                    <a href="/patient/book-appointment" class="nav-item">Book Appointment</a>
                    <a href="/patient/appointment-confirmed" class="nav-item">Appointment Status</a>
                    <a href="/patient/rate-dentist" class="nav-item">Rate Dentist</a>
                    <a href="/patient/share-experience" class="nav-item">Share Experience</a>
                </nav>
                <div class="header-icons">
                    <div class="notification-bell">
                        <i class="fas fa-bell"></i>
                    </div>
                    <!-- Patient Profile link removed -->
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <!-- Page Title -->
            <h2 class="page-heading">Select a Doctor</h2>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Search for a doctor">
                </div>
            </div>

            <!-- Available Doctors Section -->
            <div class="doctors-section">
                <h3 class="section-heading">Available Doctors</h3>
                
                <div class="doctors-list">
                    <!-- Doctor 1 -->
                    <div class="doctor-row">
                        <div class="doctor-details">
                            <h4 class="doctor-name">Dr. Amelia Carter</h4>
                            <p class="doctor-specialty">Specialty: Cardiology</p>
                            <button class="view-profile-btn">View Profile</button>
                        </div>
                        <div class="doctor-photo">
                            <img src="/images/doctor/doctor1.svg" alt="Dr. Amelia Carter">
                        </div>
                    </div>

                    <!-- Doctor 2 -->
                    <div class="doctor-row">
                        <div class="doctor-details">
                            <h4 class="doctor-name">Dr. Ethan Bennett</h4>
                            <p class="doctor-specialty">Specialty: Dermatology</p>
                            <button class="view-profile-btn">View Profile</button>
                        </div>
                        <div class="doctor-photo">
                            <img src="/images/doctor/doctor2.svg" alt="Dr. Ethan Bennett">
                        </div>
                    </div>

                    <!-- Doctor 3 -->
                    <div class="doctor-row">
                        <div class="doctor-details">
                            <h4 class="doctor-name">Dr. Olivia Hayes</h4>
                            <p class="doctor-specialty">Specialty: Pediatrics</p>
                            <button class="view-profile-btn">View Profile</button>
                        </div>
                        <div class="doctor-photo">
                            <img src="/images/doctor/doctor3.svg" alt="Dr. Olivia Hayes">
                        </div>
                    </div>

                    <!-- Doctor 4 -->
                    <div class="doctor-row">
                        <div class="doctor-details">
                            <h4 class="doctor-name">Dr. Noah Thompson</h4>
                            <p class="doctor-specialty">Specialty: Orthodontics</p>
                            <button class="view-profile-btn">View Profile</button>
                        </div>
                        <div class="doctor-photo">
                            <img src="/images/doctor/doctor4.svg" alt="Dr. Noah Thompson">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html> 
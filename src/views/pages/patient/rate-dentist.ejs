<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rate Your Dentist</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header Section -->
    <header class="dental-header">
        <div class="header-container">
            <div class="header-left">                <h1 class="clinic-logo">DENTAL CLINIC</h1>
            </div>
            <div class="header-right">
                <nav class="main-nav">
                    <a href="/patient/select-doctor" class="nav-item">Select Doctor</a>
                    <a href="/patient/book-appointment" class="nav-item">Book Appointment</a>
                    <a href="/patient/appointment-confirmed" class="nav-item">Appointment Status</a>
                    <a href="/patient/rate-dentist" class="nav-item">Rate Dentist</a>
                    <a href="/patient/share-experience" class="nav-item">Share Experience</a>
                </nav>
                <div class="header-icons">
                    <div class="notification-bell">
                        <i class="fas fa-bell"></i>
                    </div>
                    <!-- Patient Profile link removed -->
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="rate-dentist-main">
        <div class="main-container">
            <!-- Page Title -->
            <h1 class="page-title">Rate Your Dentist</h1>
            <p class="page-subtitle">Your feedback helps us improve our services. Please rate your experience with Dr. Olivia Bennett.</p>

            <!-- Feedback Sections -->
            <div class="feedback-sections">
                <!-- Communication Section -->
                <div class="feedback-section">
                    <h2 class="section-title">Communication</h2>
                    <p class="section-question">How clearly did the doctor explain your treatment options?</p>
                    <div class="rating-options">
                        <div class="rating-row">
                            <button type="button" class="rating-btn" data-value="strongly-disagree">Strongly Disagree</button>
                            <button type="button" class="rating-btn" data-value="disagree">Disagree</button>
                            <button type="button" class="rating-btn" data-value="neutral">Neutral</button>
                            <button type="button" class="rating-btn" data-value="agree">Agree</button>
                            <button type="button" class="rating-btn" data-value="strongly-agree">Strongly Agree</button>
                        </div>
                    </div>
                </div>

                <!-- Professionalism Section -->
                <div class="feedback-section">
                    <h2 class="section-title">Professionalism</h2>
                    <p class="section-question">How professional and respectful was the doctor?</p>
                    <div class="rating-options">
                        <div class="rating-row">
                            <button type="button" class="rating-btn" data-value="strongly-disagree">Strongly Disagree</button>
                            <button type="button" class="rating-btn" data-value="disagree">Disagree</button>
                            <button type="button" class="rating-btn" data-value="neutral">Neutral</button>
                            <button type="button" class="rating-btn" data-value="agree">Agree</button>
                            <button type="button" class="rating-btn" data-value="strongly-agree">Strongly Agree</button>
                        </div>
                    </div>
                </div>

                <!-- Wait Time Section -->
                <div class="feedback-section">
                    <h2 class="section-title">Wait Time</h2>
                    <p class="section-question">How reasonable was the wait time to see the doctor?</p>
                    <div class="rating-options">
                        <div class="rating-row">
                            <button type="button" class="rating-btn" data-value="very-long">Very Long</button>
                            <button type="button" class="rating-btn" data-value="long">Long</button>
                            <button type="button" class="rating-btn" data-value="average">Average</button>
                            <button type="button" class="rating-btn" data-value="short">Short</button>
                            <button type="button" class="rating-btn" data-value="very-short">Very Short</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Overall Satisfaction Section -->
            <div class="overall-satisfaction-section">
                <h2 class="section-title">Overall Satisfaction</h2>
                <div class="star-rating">
                    <i class="fas fa-star active"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
                <p class="satisfaction-question">Overall, how satisfied were you with your consultation with this doctor?</p>
                <div class="satisfaction-textarea">
                    <textarea placeholder="Overall, how satisfied were you with your consultation with this doctor?" rows="4"></textarea>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-actions">
                <button type="submit" class="submit-feedback-btn">Submit Feedback</button>
            </div>
        </div>
    </main>

    <script>
        // Rating button functionality
        document.querySelectorAll('.rating-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all buttons in the same section
                const section = this.closest('.feedback-section');
                const allButtons = section.querySelectorAll('.rating-btn');
                allButtons.forEach(button => button.classList.remove('active'));
                // Add active class to clicked button
                this.classList.add('active');
            });
        });

        // Star rating functionality
        document.querySelectorAll('.star-rating i').forEach((star, index) => {
            star.addEventListener('click', function() {
                // Remove all filled stars
                document.querySelectorAll('.star-rating i').forEach(s => {
                    s.classList.remove('fas', 'active');
                    s.classList.add('far');
                });
                // Fill stars up to clicked star
                for (let i = 0; i <= index; i++) {
                    document.querySelectorAll('.star-rating i')[i].classList.remove('far');
                    document.querySelectorAll('.star-rating i')[i].classList.add('fas', 'active');
                }
            });
        });
    </script>
</body>
</html> 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check Your Email - Dental Clinic</title>
    <link rel="stylesheet" href="/css/checkemail.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container exact-layout">
        <div class="login-left exact-left">
            <div class="logo-section exact-logo-section">
                <div class="logo-text">
                    <div class="logo-main">DENTAL</div>
                    <div class="logo-sub">CLINIC</div>
                </div>
            </div>
            <div class="tooth-3d exact-tooth-3d">
                <div class="abstract-tooth">
                    <svg width="300" height="200" viewBox="0 0 300 200" fill="none">
                        <!-- White oval body -->
                        <ellipse cx="180" cy="100" rx="60" ry="40" fill="white"/>
                        <!-- Blue eyes -->
                        <circle cx="170" cy="90" r="4" fill="#2563eb"/>
                        <circle cx="190" cy="90" r="4" fill="#2563eb"/>
                        <!-- Left curved handle -->
                        <path d="M120 100 Q100 120 110 140 Q120 160 130 150" stroke="#8A2BE2" stroke-width="8" fill="none" stroke-linecap="round"/>
                        <!-- Right angular arm -->
                        <path d="M240 100 L260 80 L270 90 L260 110" stroke="#8A2BE2" stroke-width="8" fill="none" stroke-linecap="round"/>
                    </svg>
                </div>
            </div>
        </div>
        <div class="login-right exact-right">
            <div class="login-form-wrapper exact-form-wrapper">
                <h2 class="login-title exact-title">Check your email</h2>
                <p class="login-subtitle exact-subtitle">we sent a reset link to contact@example.com</p>
                
                <div class="verification-form">
                    <div class="code-inputs">
                        <input type="text" class="code-input" maxlength="1" pattern="[0-9]">
                        <input type="text" class="code-input" maxlength="1" pattern="[0-9]">
                        <input type="text" class="code-input" maxlength="1" pattern="[0-9]">
                        <input type="text" class="code-input" maxlength="1" pattern="[0-9]">
                        <input type="text" class="code-input" maxlength="1" pattern="[0-9]">
                    </div>
                    
                    <button type="button" class="login-btn exact-login-btn">Verify Code</button>
                </div>
                
                <div class="forgot-password exact-forgot">
                    <a href="/auth/forgot-password">Haven't got email yet? Resend email</a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Auto-focus to next input when typing in verification code
        const codeInputs = document.querySelectorAll('.code-input');
        codeInputs.forEach((input, index) => {
            input.addEventListener('input', function() {
                if (this.value.length === 1 && index < codeInputs.length - 1) {
                    codeInputs[index + 1].focus();
                }
            });
            
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && this.value.length === 0 && index > 0) {
                    codeInputs[index - 1].focus();
                }
            });
        });
    </script>
</body>
</html> 